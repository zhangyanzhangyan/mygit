    <script type="text/javascript">
        //var E=0;
        var mainHeight=document.getElementById("main");
        var rightHeight=document.getElementById("right");
        var leftHeight=document.getElementById("left");
        if(rightHeight>mainHeight||rightHeight>leftHeight)
        {
            document.getElementById("father").style.height=rightHeight+40;
        }
        function A()
        {
            var mainHeight=document.getElementById("main");
            var rightHeight=document.getElementById("right");
            var leftHeight=document.getElementById("left");
            //E++;
            //var B=E%2;
            if(rightHeight.style.background != "#fff")
            {
                mainHeight.style.height = "500px";
                rightHeight.style.background = "#888888";
                rightHeight.className = "left_2";
            }
            else
            {
                mainHeight.style.height = auto;
                rightHeight.style.background = "#fff";
            }
        }
        function B()
        {
            var confirmn = confirm("确认隐藏？？？");
            if (confirmn = true)
            {
                var advertisement = document.getElementById("advertisement");
                advertisement.style.display = "none";
            }
        }
        function C()
        {
            var advertisement=document.getElementById("advertisement");
            advertisement.style.display="block";
        }
        function D()
        {
            var p1=document.getElementById("right");
            p1.removeAttribute("style");
            p1.className="left_2";
        }
    </script>
